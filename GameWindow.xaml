<Window x:Class="Vaja_3___Tic_Tac_Toe.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Igra" Height="400" Width="400">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Rows="3" Columns="3" Grid.Row="0" Name="GameBoard">
        </UniformGrid>
        <TextBlock Name="StatusText" Grid.Row="1" Text="Na potezi: X" HorizontalAlignment="Center" Margin="0,10,0,10"/>
    </Grid>
</Window>
